<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#00b1e0"
	tools:context=".MainActivity">

	<ImageView
	     android:id="@+id/image"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentTop="true"
	     android:layout_centerHorizontal="true"
	     android:scaleType="centerCrop"
	     android:src="@drawable/image" />

	<ImageView
		 android:id="@+id/home"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_alignParentLeft="true"
		 android:layout_alignParentStart="true"
		 android:layout_below="@+id/name"
		 android:layout_marginLeft="29dp"
		 android:layout_marginStart="29dp"
		 android:layout_marginTop="12dp"
		 android:src="@drawable/home" />

	<ImageView
		android:id="@+id/telephone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/address"
		android:layout_toLeftOf="@+id/address"
		android:layout_toStartOf="@+id/address"
		android:src="@drawable/phone" />

	<ImageView
		android:id="@+id/webpage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/telephone"
		android:layout_alignStart="@+id/telephone"
		android:layout_alignTop="@+id/web"
		android:src="@drawable/internet" />

    <TextView
	    android:id="@+id/name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/image"
	    android:layout_centerHorizontal="true"
	    android:fontFamily="@font/dosis_regular"
	    android:text="@string/name"
	    android:textColor="@android:color/white"
	    android:textSize="50sp" />

	<TextView
		android:id="@+id/address"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/home"
		android:layout_marginLeft="20dp"
		android:layout_marginStart="20dp"
		android:layout_toEndOf="@+id/home"
		android:layout_toRightOf="@+id/home"
		android:autoLink="map"
		android:fontFamily="@font/dosis_regular"
		android:text="@string/address"
		android:textColor="@android:color/white"
		android:textColorLink="@android:color/white"
		android:textSize="20sp" />

	<TextView
		android:id="@+id/phone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/address"
		android:layout_alignStart="@+id/address"
		android:layout_below="@+id/address"
		android:autoLink="phone"
		android:layout_marginTop="5dp"
		android:fontFamily="@font/dosis_regular"
		android:text="@string/phone"
		android:textColor="@android:color/white"
		android:textColorLink="@android:color/white"
		android:textSize="20sp" />
	<TextView
		android:id="@+id/web"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/phone"
		android:layout_alignStart="@+id/phone"
		android:layout_below="@+id/phone"
		android:layout_marginTop="14dp"
		android:autoLink="web"
		android:fontFamily="@font/dosis_regular"
		android:text="@string/web"
		android:textColor="@android:color/white"
		android:textColorLink="@android:color/white"
		android:textSize="20sp" />

</RelativeLayout>
